<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pch.user.dao.UserMapper">

  <insert id="insertUser" parameterType="string">
    insert into user (id, username, password, tellPhone, loginName, money)
    values (#{id}, #{username}, #{password}, #{tellPhone}, #{loginName}, #{money})
  </insert>

  <select id="loadUserByUsername" resultType="com.pch.user.po.UserPO">
    select * from user
    where username = #{username}
  </select>


</mapper>