<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pch.user.dao.UserMapper">
  <sql id="files">
    id, username, password, tellphone, login_name
  </sql>

  <insert id="insertUser" parameterType="string">
    insert into tb_user (id, username, password, tellphone, login_name)
    values (#{id}, #{username}, #{password}, #{tellPhone}, #{loginName})
  </insert>

  <select id="loadUserByUsername" resultType="com.pch.user.po.UserPO">
    select
    <include refid="files"/>
    from tb_user
    where username = #{username}
  </select>
</mapper>